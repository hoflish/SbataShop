{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "prettier", "jsx-a11y", "import"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],
    "import/newline-after-import": 0,
    "class-methods-use-this": 0,
    "no-console": 0
  }
}
